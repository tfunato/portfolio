{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": ["dom", "es2021"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
