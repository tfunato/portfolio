{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": ["dom", "ES2020"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": false
  }
}
